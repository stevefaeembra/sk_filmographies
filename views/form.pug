html(lang='en')
  head
   title WikiData Film API by Stevefaeembra
   link(rel="stylesheet" href="../css/style.css")
  body
    h1
      = "WikiData Filmography"
    p
      = "This simple app searches WikiData for either an Actor's filmography, or the cast of a given film"
    p
      = "Note the search is case sensitive and must match EXACTLY the label used in WikiData/Wikipedia"
    hr
    h2
      = "Lookup filmography of actor"
    form(class="form-filmography" method="GET" action="/filmography")
      div(class="form-row")
        label(for="actorName")
          | Actor name 
        input(type="text" id="actorName" name="actorName")
      div(class="form-row")
        input(type="submit" name="submit" text="submit")
    hr
    h2
      = "Lookup cast of Film"
    form(class="form-cast" method="GET" action="/cast")
      div(class="form-row")
        label(for="filmName")
          | Film Name
        input(type="text" id="filmName" name="filmName")
      div(class="form-row")
        input(type="submit" name="submit" text="submit")
