doctype html
html(lang='en')
  head
   title WikiData Film API by Stevefaeembra
   link(rel="stylesheet" href="../css/style.css")
  body
    h1
      = "Filmography for "+data.name
    table
      thead
        th
          | Year
        th
          | Month
        th
          | Film         
      tbody
        - let currentYear = data.filmography[0].year-1
        - for (var film of data.filmography)
          - let year = film.year
          - if (year>currentYear) {
            tr(class="newYear")              
              td
                = film.year 
              td 
                = film.month
                td(class="filmName")
                  - const linky = "../cast?filmName="+ film.filmName
                  a(href=linky)
                      = film.filmName
          -} else {
            tr 
              td
                = ""
              td 
                = film.month
              td(class="filmName")
                - const linky = "../cast?filmName="+ film.filmName
                a(href=linky)
                    = film.filmName
          - }            
          - currentYear = year  
